<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BLOGGER</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/main.css">

</head>
<body>
    <div class="container mt-4 p-4">
        <div class="row g-4">
            <% blogs.forEach(blog => { %>
                <div class="col-md-6 col-lg-4 px-3">
                    <div class="card blog-card h-100 position-relative">
                        <!-- Delete Icon -->
                        <form action="/delete" method="POST">
                            <input type="hidden" name="deleteBlogId" value="<%= blog.id %>">
                            <button type="submit" class="delete-icon">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                        <div class="card-body">
                            <h5 class="blog-title"><%= blog.title %></h5>
                            <p class="blog-content"><%= blog.description %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        
        <div class="text-center mt-4">
            <form action="/create-blog" method="GET">
                <button type="submit" class="btn btn-outline-primary create-button">+</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</body>
</html>