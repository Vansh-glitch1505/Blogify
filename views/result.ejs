<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BLOGGER</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/main.css"> <!-- Link to your external CSS file -->
    <style>
        /* Add this to your main.css or keep it here */
        
        
        .blog-card:hover .delete-icon {
            opacity: 1;
        }
        
        .delete-icon:hover {
            background: #dc3545;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container py-4">
        <h1 class="text-center mb-5" style="color: var(--primary-color);">My Blogs</h1>
        
        <div class="row g-4">
            <% blogs.forEach(blog => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card blog-card h-100 position-relative">
                        <!-- Delete Icon - Now in top-left -->
                        <form action="/delete" method="POST">
                            <input type="hidden" name="deleteBlogId" value="<%= blog.id %>">
                            <button type="submit" class="delete-icon" aria-label="Delete blog">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                        <div class="card-body">
                            <h5 class="blog-title"><%= blog.title %></h5>
                            <p class="blog-content"><%= blog.description %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        
        <div class="text-center mt-5">
            <form action="/create-blog" method="GET">
                <button type="submit" class="btn create-button" title="Create new blog">
                    <i class="bi bi-plus"></i>
                </button>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>